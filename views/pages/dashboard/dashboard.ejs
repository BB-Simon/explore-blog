<%- include('../../partials/header.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

<div class="container-fluid" style="height: 100vh;">
   
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2 my-5">
                    <h5>My recently created posts</h5>
                    <div class="row">
                        <% if(posts.length === 0){ %>
                        <div class="text-center text-muted">
                            <p>There is not posts avaiable right now</p>
                        </div>
                        <% } else { %>
                        <% for(let post of posts.reverse()){ %>
                        <div class="card col-sm-3 m-2">
                            <% if(post.thumbnail){ %>
                            <img src="<%= post.thumbnail %>" class="card-img-top mt-3">
                            <% } %>
                            <div class="card-bodt p-0">
                                <a href="/explorer/<%= post._id %>" style="color: #222222;">
                                    <p class="my-2"><%= post.title %> </p>
                                </a>
                            </div>
                        </div>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 offset-md-2 my-5">
                    <h5>My recently created bookmarks</h5>
                    <% if(bookmarks.length === 0){ %>
                    <div class="text-center text-muted my-5">
                        <p>There is not posts avaiable right now</p>
                    </div>
                    <% } else { %>
                    <% for(let bookmark of bookmarks){ %>
                    <div class="row">
                        <div class="card col-sm-3 m-2">
                            <% if(bookmark.thumbnail){ %>
                            <img src="<%= bookmark.thumbnail %>" class="card-img-top mt-3">
                            <% } %>
                            <div class="card-bodt p-0">
                                <a href="/explorer/<%= bookmark._id %>" style="color: #222222;">
                                    <p class="my-2"><%= bookmark.title %> </p>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

</div>

<%- include('../../partials/footer.ejs') %>
</body>

</html>
<%- include('../../partials/header.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

<div class="container-fluid" style="height: 100vh;">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card card-body my-5">
                        <h5><%= title %> </h5>
                        <div>
                            <% if(posts.length === 0){ %>
                                <div class="text-center text-muted my-5">
                                    <p>There is no bookmarks right now</p>
                                </div>
                            <% } else { %>
                                <div class="row">
                                    <% for(let post of posts.reverse()){ %>
                                    <div class="card col-sm-3 m-3">
                                        <% if(post.thumbnail){ %>
                                        <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="card-img-top mt-3">
                                        <% } %>
                                        <div class="card-body p-0 mt-2">
                                            <a href="/explorer/<%= post._id %>" style="color: #222">
                                                <%= post.title %>
                                            </a>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

<%- include('../../partials/footer.ejs') %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.js"></script>
<script src="/scripts/profilePicsUpload.js"></script>
</body>

</html>